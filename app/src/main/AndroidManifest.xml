<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="goncalves.com.readinglist" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Activities.BookListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="DATABASE"
            android:value="reading_list.db" />
        <meta-data
            android:name="VERSION"
            android:value="1" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="com.rafagonc.readinglist" />
        <meta-data
            android:name="roboguice.modules"
            android:value="goncalves.com.readinglist.Module.DAODependencyInjection,goncalves.com.readinglist.Module.FactoryDepedencyInjection" />

        <activity
            android:name=".Activities.BookAddActivity"
            android:label="@string/title_activity_book_add" >
        </activity>
    </application>

</manifest>
